{% extends 'base.html.twig' %}

{% block title %}Hello StudentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { 
        margin: 1em auto; 
        max-width: 800px; 
        width: 95%; 
        font: 18px/1.5 sans-serif; 
        background-color: #f9f9f9; /* Example background color */
        padding: 20px; /* Example padding */
        border: 1px solid #ddd; /* Example border */
        border-radius: 5px; /* Example border radius */
    }
    
    .example-wrapper code { 
        background: #F5F5F5; 
        padding: 2px 6px; 
    }

    /* Example styles for form elements */
    .form-label {
        font-weight: bold;
        color: #333;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .btn-submit {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
</style>

<div class="example-wrapper">
    {{ form(form) }}
</div>
{% endblock %}
